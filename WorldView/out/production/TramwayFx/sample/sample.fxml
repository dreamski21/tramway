                    <LineTo fx:id="LeftUpCross" x="300" y="250" />

                    <MoveTo fx:id="startOfLastLine" x="300" y="250" />
                    <LineTo fx:id="endOfLeftLine" x="60" y="250" />

                </elements>
            </Path>

